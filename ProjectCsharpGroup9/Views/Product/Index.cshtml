@model IEnumerable<ProjectCsharpGroup9.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="colorlib-product">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
                <h2>Sản phẩm</h2>
            </div>
        </div>
        <div class="row row-pb-md">
            @foreach (var item in Model)
                    {
            <div class="col-lg-3 mb-4 text-center">
                
                <div class="product-entry border">
                    
                       @* @foreach (var gallery in item.Galleries)
                        {
                            <a href="#" class="prod-img">
                                <img src="@Url.Content(gallery.ImagePath)" class="img-fluid" alt="@gallery.Description">
                            </a>
                        } *@
                        <div class="desc">
                            <h2><a href="#">@Html.DisplayFor(modelItem => item.ProductName)</a></h2>
                            <span class="price">@Html.DisplayFor(modelItem => item.DiscountPrice)đ</span>
                            <span class="price text-secondary">Số lượng: @Html.DisplayFor(modelItem => item.Quantity)</span>
                            @using(Html.BeginForm("AddtoCart","Product",FormMethod.Post)){
                                @Html.Hidden("id", item.ProductID)
                                <div class="form-group">
                                    <input type="submit" value="Add to Cart" class="btn btn-dark text-light fw-bold rounded-pill">
                                </div>
                            }
                        </div>
                    
                    
                </div>
                
            </div>
            }
        </div>
    </div>
</div>