@model ProjectCsharpGroup9.Models.User

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1 class="my-4">User Detail</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Detail</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Full Name: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-2">Date of Birth: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.BirthDay)</dd>

                <dt class="col-sm-2">Username: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

                <dt class="col-sm-2">Password: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-2">Email: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-2">Phone Number: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-2">Address: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-2">Role ID: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.RoleID)</dd>

                <dt class="col-sm-2">Membership ID: </dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Membership.MemberShipRank)</dd>

            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.UserID" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
